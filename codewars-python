//Pillars
def pillars(num_pill, dist, width):
    if num_pill == 1:
        return 0
    elif num_pill == 2:
        return dist * 100
    elif num_pill > 2:
        return num_pill * width + (num_pill - 1) * dist * 100 - width * 2


//Convert number to reversed array of digits
def digitize(n):
    n_str = str(n)
    li = list(n_str.split()) 
    li.sort()
    return li


//Convert a Number to a String!
def number_to_string(num):
    # Return a string of the number here!
    string = "{}".format(num)
    return string


//Jenny's secret message
def greet(name):
    return "Hello, {name}!".format(name=name)
    if name == "Johnny":
        return "Hello, my love!"


//Remove duplicates from list
def distinct(seq):
    res = []
    [res.append(x) for x in seq if x not in res]
    return res


//Sum of positive
def positive_sum(arr):
    # Your code here
    sum = 0
    for num in arr:
        if num > 0:
            sum = sum + num
    return sum


//Removing Elements
def remove_every_other(my_list):
    res = [my_list[i] for i in range(len(my_list)) if i % 2 == 0]
    return res
