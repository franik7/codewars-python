//Pillars
def pillars(num_pill, dist, width):
    if num_pill == 1:
        return 0
    elif num_pill == 2:
        return dist * 100
    elif num_pill > 2:
        return num_pill * width + (num_pill - 1) * dist * 100 - width * 2


//Convert number to reversed array of digits
def digitize(n):
    n_str = str(n)
    li = list(n_str.split()) 
    li.sort()
    return li
